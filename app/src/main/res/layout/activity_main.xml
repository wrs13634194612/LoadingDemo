<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.example.user.mathgame.TaiJiButton
                    android:id="@+id/taiJiButton"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true" />

                <com.example.user.mathgame.ManyCircle
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
                <com.example.user.mathgame.LoadingLine
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <com.example.user.mathgame.SquareLine
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <com.example.user.mathgame.FiveLine
                    android:id="@+id/fiveLine1"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />




            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="stop" />

                <com.example.user.mathgame.WindowsLoad
                    android:id="@+id/windows_load"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <com.example.user.mathgame.PointToLineRotate
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <com.example.user.mathgame.FourCirlceRotate
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <com.example.user.mathgame.PPTVLoading
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.example.user.mathgame.Loding58View
                    android:id="@+id/add"
                    android:visibility="visible"
                    android:layout_width="100dp"
                    android:layout_height="140dp">
                </com.example.user.mathgame.Loding58View>
                <com.example.user.mathgame.StarCircle
                    android:layout_width="100dp"
                    android:layout_height="100dp">
                </com.example.user.mathgame.StarCircle>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
